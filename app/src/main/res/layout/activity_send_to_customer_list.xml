<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SendToCustomerList">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin ="10dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Select a customer to transfer money"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:background="@drawable/send_to_customer_list_item"
        android:textStyle="bold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/send_to_customer_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/customers_list_item" />
</LinearLayout>